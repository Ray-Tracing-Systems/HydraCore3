{
    "version": "0.2.0",
    "configurations": [

    {
        "name": "BunnyCornell",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/bin-release/hydra",
        "args": ["--gpu",
                 "-in", "../HydraScenes/cornell_bunny.xml",
                 "-integrator", "mispt", 
                 "-width", "1000",
                 "-height", "1000",
                 "-spp", "5000", 
                 "-out", "../out/pic.bmp",
                 "--spectral"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    },

